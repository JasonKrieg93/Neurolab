<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/settings_submit"
            style="@style/TextButtonBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="28dp"
            android:text="@string/settings_button_submit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.513"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/settings_password_new"
            style="@style/EditText"
            android:layout_width="560dp"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="@string/settings_password_new"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.212"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settings_textview_password_title" />

        <EditText
            android:id="@+id/settings_textview_security_question_one"
            style="@style/EditText"
            android:layout_width="560dp"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:hint="@string/settings_security_question_one"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.219"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settings_textview_security_title_one" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/settings_security_answer_one_inputLayout"
            app:passwordToggleEnabled="true"
            style="@style/TextInputLayoutAppearance"
            android:layout_width="560dp"
            android:layout_height="70dp"
            android:layout_weight="0.7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.212"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settings_textview_security_question_one">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/security_editText_answer_one"
                style="@style/EditText"
                android:layout_width="560dp"
                android:layout_height="60dp"
                android:layout_marginTop="4dp"
                android:ems="10"
                android:hint="@string/settings_security_answer_one"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.225"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings_textview_security_question_one" />

        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/settings_textview_security_question_two"
            style="@style/EditText"
            android:layout_width="560dp"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:hint="@string/settings_security_question_two"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.212"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settings_textview_security_title_two" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/settings_security_answer_two_inputLayout"
            style="@style/TextInputLayoutAppearance"
            android:layout_width="474dp"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.165"
            app:layout_constraintStart_toStartOf="parent"

            tools:layout_editor_absoluteY="54dp">

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/settings_textview_security_title"
            style="@style/TextSubHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:text="@string/settings_security_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.138"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settings_password_new_inputLayout" />

        <TextView
            android:id="@+id/settings_textview_password_title"
            style="@style/TextSubHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="@string/settings_password_reset_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.114"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settings_password_current_inputLayout" />

        <TextView
            android:id="@+id/settings_textview_security_title_one"
            style="@style/TextBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/settings_security_question_one"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.091"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settings_textview_security_title" />

        <TextView
            android:id="@+id/settings_textview_security_title_two"
            style="@style/TextBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="@string/settings_security_question_two"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.093"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settings_security_answer_one_inputLayout" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/settings_password_current_inputLayout"
            style="@style/TextInputLayoutAppearance"
            android:layout_width="474dp"
            android:layout_height="0dp"
            android:layout_marginTop="48dp"
            android:layout_weight="0.7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.156"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/security_editText_old_password"
                style="@style/EditText"
                android:layout_width="468dp"
                android:layout_height="70dp"
                android:hint="@string/settings_password_old"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/settings_password_new_inputLayout"
            style="@style/TextInputLayoutAppearance"
            android:layout_width="560dp"
            android:layout_height="70dp"
            android:layout_weight="0.7"
            app:passwordToggleEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.22"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settings_password_new">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/settings_password_confirm"
                style="@style/EditText"
                android:layout_width="560dp"
                android:layout_height="60dp"
                android:layout_marginTop="4dp"
                android:ems="10"
                android:hint="@string/settings_password_repeat"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.216"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings_password_new" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/settings_security_editText_answer_two"
            style="@style/EditText"
            android:layout_width="556dp"
            android:layout_height="76dp"
            android:hint="@string/settings_security_answer_two"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.209"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settings_textview_security_question_two" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>