<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/visual_memory_start_game"
        style="@style/TextButtonBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:text="@string/visual_memory_game_start_game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/visual_memory_lives_counter"
        style="@style/TextBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/visual_memory_game_lives_count"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/visual_memory_current_level" />

    <TextView
        android:id="@+id/visual_memory_current_level"
        style="@style/TextSubHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="@string/visual_memory_game_current_level"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/visual_memory_pattern_grid"
        android:layout_width="728dp"
        android:layout_height="649dp"
        android:layout_marginTop="108dp"
        app:columnCount="5"
        app:layout_constraintBottom_toTopOf="@+id/visual_memory_start_game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/visual_memory_lives_counter"
        app:layout_constraintVertical_bias="0.0"
        app:rowCount="5">

        <Button
            android:id="@+id/button3"
            android:layout_width="135dp"
            android:layout_height="98dp"
            android:text="Button"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/button6"
            android:layout_width="135dp"
            android:layout_height="98dp"
            android:text="Button"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/button7"
            android:layout_width="135dp"
            android:layout_height="98dp"
            android:text="Button"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/button8"
            android:layout_width="135dp"
            android:layout_height="98dp"
            android:text="Button"
            app:layout_column="3"
            app:layout_row="0" />

        <Button
            android:id="@+id/button9"
            android:layout_width="135dp"
            android:layout_height="98dp"
            android:text="Button"
            app:layout_column="4"
            app:layout_row="0" />

        <Button
            android:id="@+id/button10"
            android:layout_width="135dp"
            android:layout_height="98dp"
            android:text="Button"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/button11"
            android:layout_width="135dp"
            android:layout_height="98dp"
            android:text="Button"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/button12"
            android:layout_width="135dp"
            android:layout_height="98dp"
            android:text="Button"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/button13"
            android:layout_width="135dp"
            android:layout_height="98dp"
            android:text="Button"
            app:layout_column="0"
            app:layout_row="4" />
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>