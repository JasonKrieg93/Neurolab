<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorError">@color/colorWarning</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
        <item name="colorButtonNormal">@color/colorButtonDefault</item>
    </style>

    <!-- Blue Text Button theme (Text only button, no background) -->
    <style name="TextButtonBlue" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:borderlessButtonStyle"/>
        <item name="android:textColor">@drawable/button_blue_text_colour</item>
        <item name="android:textSize">44sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Red Text Button theme (Text only button, no background) -->
    <style name="TextButtonRed" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:borderlessButtonStyle"/>
        <item name="android:textColor">@drawable/button_red_text_colour</item>
        <item name="android:textSize">44sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Unselected Game Button for Visual Memory Game -->
    <style name="VisualMemoryGameButtonUnselected" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:drawable">@drawable/button_visual_memory_unselected</item>
        <item name="android:borderlessButtonStyle"/>
        <item name="android:textColor">@color/colorYellow</item>
        <item name="android:textSize">44sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Correct Guess Game Button for Visual Memory Game -->
    <style name="VisualMemoryGameButtonCorrect" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@color/colorYellow</item>
        <item name="android:drawable">@drawable/button_visual_memory_unselected</item>
        <item name="android:borderlessButtonStyle"/>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">44sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Incorrect Guess Game Button for Visual Memory Game -->
    <style name="VisualMemoryGameButtonIncorrect" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@color/colorWarning</item>
        <item name="android:drawable">@drawable/button_visual_memory_unselected</item>
        <item name="android:borderlessButtonStyle"/>
        <item name="android:textColor">@color/colorWarning</item>
        <item name="android:textSize">44sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ToggleButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">28sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">150sp</item>
    </style>

    <!-- Text Sub Head  -->
    <style name="TextSubHead" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">50sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Text Body -->
    <style name="TextBody" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">36sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Text small grey -->
    <style name="TextSmall" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Single line Text input -->
    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">36sp</item>
    </style>

    <!-- Theme and styling for TextInputLayout -->
    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorWarning</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="hintTextAppearance">@style/HintText</item>
    </style>

    <style name="CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="SpinnerTheme">
        <!-- Color when pressed -->
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <!-- Default color for the dropdown arrow and line -->
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

</resources>
